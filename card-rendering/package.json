    "test:bs": "karma start karma.bs.config.js --coverage"
  },
  "dependencies": {
    "lit-html": "^1.0.0",
    "lit-element": "^2.0.1"
  },
  "devDependencies": {
    "es-dev-server": "^1.5.0",
    "@open-wc/testing-karma": "^4.0.9",
    "webpack-merge": "^4.1.5",
    "@open-wc/testing-karma-bs": "^1.3.94",
    "@open-wc/testing": "^2.0.0"
  }
}
